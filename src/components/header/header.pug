include ./logo

mixin header(isMainPage, currentPage, hasBanner, tallBanner, title, pageTitle)
  header.header(class={'header--banner': hasBanner, 'header--tall': tallBanner})&attributes(attributes)
    if hasBanner
      .header__banner-image
        +picture(hasBanner)
    .container
      .header__inner
        //- h1.visually-hidden #{pageTitle}
        +mainNav({links: mainNavLinks, currentPage})
        .header__container
          if isMainPage
            a.header__logo.header__logo--main-page(aria-label="Логотип салона")
              +logo()
          else
            a.header__logo(href="/home.html", aria-label="На главную")
              +logo()
          h2.header__title #{blockTitle}
