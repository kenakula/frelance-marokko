    image: 'image-service-3',
    format: 'jpg',
    width: 262,
    height: 289,
    altText: 'Услуга в 6 или 4 руки',
  };
  const image2 = {
    path: '',
    image: 'image-service',
    format: 'jpg',
    width: 654,
